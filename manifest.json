{
  "manifest_version": 3,
  "name": "Roam Research URL Saver",
  "version": "1.0",
  "description": "Save current URL to your Roam Research daily notes",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://api.roamresearch.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save to Roam Research"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}